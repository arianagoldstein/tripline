<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivCityCoverPhotoSearchRec"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvCityNameSearchRec"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:text="Chicago"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivCityCoverPhotoSearchRec"
        app:layout_constraintEnd_toEndOf="@+id/ivCityCoverPhotoSearchRec"
        app:layout_constraintStart_toStartOf="@+id/ivCityCoverPhotoSearchRec" />

</androidx.constraintlayout.widget.ConstraintLayout>
