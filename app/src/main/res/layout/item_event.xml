<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivIconEvent"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pin_icon" />

    <TextView
        android:id="@+id/tvTripTitleEvent"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivIconEvent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Snorkeling in the Atlantic" />

    <View
        android:id="@+id/divEvent"
        android:layout_width="361dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="#00c7d1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvEventImages" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEventImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivIconEvent" />

    <TextView
        android:id="@+id/tvDescriptionEvent"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivIconEvent"
        app:layout_constraintStart_toEndOf="@+id/ivIconEvent"
        app:layout_constraintTop_toBottomOf="@+id/tvTripTitleEvent"
        tools:text="a super cool snorkeling trip yay" />

    <TextView
        android:id="@+id/tvActivityTypeEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ACTIVITY" />

